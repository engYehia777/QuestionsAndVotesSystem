<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Questions and Votes | Registration Page</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Areas/Profile/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->       
    <link rel="stylesheet" href="~/Areas/Profile/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->            
    <link rel="stylesheet" href="~/Areas/Profile/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->         
    <link rel="stylesheet" href="~/Areas/Profile/dist/css/AdminLTE.min.css">
    <!-- Material Design -->     
    <link rel="stylesheet" href="~/Areas/Profile/dist/css/bootstrap-material-design.min.css">
    <link rel="stylesheet" href="~/Areas/Profile/dist/css/ripples.min.css">
    <link rel="stylesheet" href="~/Areas/Profile/dist/css/MaterialAdminLTE.min.css">
    <!-- iCheck -->
    <!-- <link rel="stylesheet" href="../../plugins/iCheck/square/blue.css"> -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
