@model IEnumerable<QuestionsAndVotesSystem.Api.Model.Language>

@*Language Menue*@
<li class="dropdown tasks-menu">

    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="fa fa-fw fa-language"></i> select language 
    </a>
    <!-- Inner menu: contains the Language -->
    <ul class="dropdown-menu">
        @foreach (var item in Model)
        {
            <li>
                <!-- Language item -->

                @Html.ActionLink(item.LanguageName, "SetLanguage", "Language", new { url = Request.Url.PathAndQuery, id = item.LanguageID , changTo = item.Name }, new { @class = "Info link" })

            </li>
        }
        <!-- end task item -->
    </ul>

</li>