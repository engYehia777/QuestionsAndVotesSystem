@model IEnumerable<QuestionsAndVotesSystem.Api.Model.AspNetRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Profile/Views/Shared/_ProfileLayout.cshtml";
}

<h2>Index</h2>

<p>
    @{
        Html.RenderAction("Links", "authorization",
            new { Url = "/Profile/roles/Create", ID = "NewPage", type = "A" }
            );
    }
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @{
                        Html.RenderAction("Links", "authorization", new { URl = "/Profile/roles/Edit/" + @item.Id, ID = "kl", type = "U" });
                        //Html.RenderAction("Links", "authorization", new { URl = "/Profile/roles/Delete/" + @item.Id, ID = "kl", type = "D" });
                    }


                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{

    <script>

        $(document).ready(function () {
            $('#pagTbl').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': true
            });
        });

    </script>
}
